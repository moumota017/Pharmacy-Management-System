<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pharmecymanagementsystem.InventoryController"
            prefWidth="800" prefHeight="600">

    <!-- Product Table -->
    <TableView fx:id="productTable" layoutX="14" layoutY="14" prefWidth="500" prefHeight="400">
        <columns>
            <TableColumn fx:id="colName" text="Product Name" prefWidth="150"/>
            <TableColumn fx:id="colStock" text="Stock" prefWidth="100"/>
            <TableColumn fx:id="colReorder" text="Reorder Point" prefWidth="100"/>
            <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
            <TableColumn fx:id="colSupplier" text="Supplier" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Input Form -->
    <TextField fx:id="tfName"     layoutX="530" layoutY="14"  promptText="Name"          prefWidth="200"/>
    <TextField fx:id="tfStock"    layoutX="530" layoutY="54"  promptText="Stock"         prefWidth="200"/>
    <TextField fx:id="tfReorder"  layoutX="530" layoutY="94"  promptText="Reorder Point" prefWidth="200"/>
    <TextField fx:id="tfPrice"    layoutX="530" layoutY="134" promptText="Price"         prefWidth="200"/>
    <TextField fx:id="tfSupplier" layoutX="530" layoutY="174" promptText="Supplier"      prefWidth="200"/>

    <!-- Action Buttons -->
    <Button fx:id="btnAdd"     layoutX="530" layoutY="220" text="Add Product"      prefWidth="95"/>
    <Button fx:id="btnEdit"    layoutX="635" layoutY="220" text="Edit Product"     prefWidth="95"/>
    <Button fx:id="btnDelete"  layoutX="740" layoutY="220" text="Delete Product"   prefWidth="95"/>
    <Button fx:id="btnReorder" layoutX="530" layoutY="260" text="Generate PO"      prefWidth="150"/>
    <Button fx:id="btnPO"      layoutX="690" layoutY="260" text="View Purchase Orders" prefWidth="145"/>

</AnchorPane>
