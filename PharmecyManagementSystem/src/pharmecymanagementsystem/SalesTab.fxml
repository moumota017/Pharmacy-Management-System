<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pharmecymanagementsystem.SalesController"
            prefWidth="800" prefHeight="600">

    <!-- Prescription Table -->
    <TableView fx:id="tblPrescription" layoutX="14" layoutY="14" prefWidth="500" prefHeight="400">
        <columns>
            <TableColumn text="Drug"      prefWidth="150"/>
            <TableColumn text="Dosage"    prefWidth="100"/>
            <TableColumn text="Date"      prefWidth="150"/>
            <TableColumn text="Interaction" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Controls -->
    <Button    fx:id="btnAddRx"            layoutX="530" layoutY="14"  text="Add Rx"                   prefWidth="100"/>
    <Button    fx:id="btnCheckInteraction" layoutX="640" layoutY="14"  text="Check Interactions"       prefWidth="140"/>
    <Label                                layoutX="530" layoutY="60"  text="Payment Method:"/>
    <ComboBox fx:id="cbPayment"           layoutX="640" layoutY="56"  prefWidth="130"/>
    <Label                                layoutX="530" layoutY="100" text="Discount (%):"/>
    <TextField fx:id="tfDiscount"         layoutX="640" layoutY="96"  promptText="0.0"                     prefWidth="130"/>
    <Button    fx:id="btnProcessSale"     layoutX="530" layoutY="140" text="Process Sale"            prefWidth="240"/>

</AnchorPane>
